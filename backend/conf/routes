# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

#Login
POST     /login                      controllers.UserController.authenticate()


# Add User  {"name":name, "password":password}
POST    /signup                      controllers.UserController.registerNew()

# Add Position

POST    /createPosition              controllers.PositionController.createPosition()

GET     /search                      controllers.SearchController.getApplications()
GET     /search/id/:id               controllers.SearchController.getApplicationById(id: Long)
